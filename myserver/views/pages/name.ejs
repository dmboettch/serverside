<!--views/pages/index.ejs-->

<!DOCTYPE html>
<html>
<head>
    <!-- call the ejs include command and provide the path to the partial to include. Path is relative to this file -->
    <!-- the bracket & % tags are used by the EJS templating engine and contain instructions for the engine to follow -->

    <!-- Include our head.ejs file -->
    <% include ../partials/head %>
    <script type="text/javascript">
        document.cookie = "username=Deanne";
    </script>
</head>
<body>

<!-- Include the header of the page -->
<header>
    <% include ../partials/header %>
</header>
    <h1>Hello, <%= name %>!</h1>
    <p>
        The word of the day is: <%= word %>.
    </p>

<!-- use EJS again to nclude the footer of the page -->
<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>